# Auto-detect text files and normalize line endings
* text=auto

# Always use LF for lock files
yarn.lock text eol=lf
package-lock.json text eol=lf
pnpm-lock.yaml text eol=lf

# Source code files (force LF)
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf

# Binary files (never change line endings)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.mp4 binary
*.mov binary
